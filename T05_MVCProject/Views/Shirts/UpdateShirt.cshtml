@model ShirtModel

<h3>Shirt</h3>
<br />
<form method="post" asp-action="UpdateShirt">
	<input type="hidden" asp-for="ShirtId" />
	<div class="text-danger" asp-validation-summary="ModelOnly"></div>
	<div class="mb-3 row">
		<div class="col-2">
			<label class="col-form-label" asp-for="Brand"></label>
		</div>
		<div class="col-6">
			<input class="form-control" type="text" asp-for="Brand" />
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="Brand"></span>
		</div>
	</div>
	<div class="mb-3 row">
		<div class="col-2">
			<label class="col-form-label" asp-for="Gender"></label>
		</div>
		<div class="col-6">
			<input class="form-control" type="text" asp-for="Gender" />
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="Gender"></span>
		</div>
	</div>
	<div class="mb-3 row">
		<div class="col-2">
			<label class="col-form-label" asp-for="Color"></label>
		</div>
		<div class="col-6">
			<input class="form-control" type="text" asp-for="Color" />
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="Color"></span>
		</div>
	</div>
	<div class="mb-3 row">
		<div class="col-2">
			<label class="col-form-label" asp-for="Size"></label>
		</div>
		<div class="col-6">
			<input class="form-control" type="number" asp-for="Size" min="1" />
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="Size"></span>
		</div>
	</div>
	<div class="mb-3 row">
		<div class="col-2">
			<label class="col-form-label" asp-for="Price"></label>
		</div>
		<div class="col-6">
			<input class="form-control" type="number" asp-for="Price" />
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="Price"></span>
		</div>
	</div>
	<div class="mb-3 row">
		<div class="col-2">
			<input class="btn btn-primary" type="submit" value="Save" />
		</div>
		<div class="col-6"></div>
	</div>
</form>
